{
    "manifest_version": 3,
    "name": "CRM AI — LinkedIn Import",
    "version": "1.0.0",
    "description": "Importez des profils LinkedIn en 1 clic dans votre CRM AI. L'IA rédige le premier message d'accroche personnalisé.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://api.openai.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "CRM AI — Importer ce profil",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/in/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}